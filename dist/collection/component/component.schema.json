{
  "$schema": "http://json-schema.org/schema",
  "id": "SchemanticsForComponent",
  "title": "Component Options Schema",
  "type": "object",
  "properties": {
    "isNxWorkspace": {
      "type": "boolean",
      "default": false
    },
    "multipleApps": {
      "type": "boolean",
      "default": false
    },
    "appId": {
      "type": "string",
      "default": ""
    },
    "appIsLib": {
      "type": "boolean",
      "default": false
    },
    "appPath": {
      "type": "string",
      "default": ""
    },
    "appMainFile": {
      "type": "string",
      "default": "main.ts"
    },
    "appSelectorPrefix": {
      "type": "string",
      "default": ""
    },
    "skipModuleImport": {
      "type": "boolean",
      "default": false
    },

    "componentsPath": {
      "type": "string",
      "default": "components"
    },
    "componentsModuleFile": {
      "type": "string",
      "default": "index.ts"
    },
    "componentName": {
      "type": "string",
      "default": "my-component"
    }
  }
}
