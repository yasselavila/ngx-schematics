{
  "name": "@yag/ngx-schematics",
  "description": "Custom schematics for Angular apps",
  "version": "1.0.0-alpha.1",
  "license": "BSD-3-Clause",
  "private": true,
  "engines": {
    "node": ">=6.12",
    "npm": ">=3.10"
  },
  "homepage": "https://github.com/yasselavila/ngx-schematics",
  "author": "Yassel Avila Gil (http://yasselavila.com)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yasselavila/ngx-schematics.git"
  },
  "keyworks": [
    "yag",
    "angular",
    "schematics",
    "ngx-schematics",
    "custom"
  ],
  "main": "index.js",
  "typings": "index.d.ts",
  "scripts": {
    "start": "npm run test:w",
    "cover": "cross-env NODE_ENV=test nyc --reporter=lcov npm run test:r",
    "coveralls": "cat ./coverage/lcov.info | \"./node_modules/.bin/coveralls\"",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "pretest": "npm run lint",
    "test": "npm run cover",
    "test:r": "cross-env NODE_ENV=test mocha -r ts-node/register src/**/*.spec.ts",
    "test:w": "cross-env NODE_ENV=test mocha --watch -r ts-node/register src/**/*.spec.ts",
    "tsc": "tsc --target es5",
    "tsc:w": "npm run tsc -- -w",
    "clean": "rimraf dist && mkdir dist",
    "pkg:data": "cpx {package.json,README.md,LICENSE.txt} dist/",
    "build": "run-s clean cover pkg:data tsc"
  },
  "dependencies": {
    "@schematics/schematics": "^0.3.1",
    "@schematics/angular": "^0.3.1",
    "@angular-devkit/core": "^0.3.1",
    "@angular-devkit/schematics": "^0.3.1",
    "@angular-devkit/schematics-cli": "^0.3.1",
    "select-shell": "^1.0.0",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@types/node": "~9.4.5",
    "@types/mocha": "^2.2.48",
    "@types/chai": "^4.1.2",
    "@types/yargs": "^10.0.1",
    "rimraf": "^2.6.2",
    "npm-run-all": "^4.1.2",
    "cross-env": "^5.1.3",
    "mocha": "^5.0.0",
    "chai": "^4.1.2",
    "nyc": "^11.4.1",
    "coveralls": "^3.0.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "~2.6.2"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      ".vscode",
      "coverage",
      "dist",
      "node_modules",
      "typings",
      "manual-tests"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html"
    ],
    "all": true
  }
}
