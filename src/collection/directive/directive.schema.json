{
  "$schema": "http://json-schema.org/schema",
  "id": "SchemanticsForDirective",
  "title": "Directive Options Schema",
  "type": "object",
  "properties": {
    "isNxWorkspace": {
      "type": "boolean",
      "default": false
    },
    "multipleApps": {
      "type": "boolean",
      "default": false
    },
    "appId": {
      "type": "string",
      "default": ""
    },
    "appIsLib": {
      "type": "boolean",
      "default": false
    },
    "appPath": {
      "type": "string",
      "default": ""
    },
    "appMainFile": {
      "type": "string",
      "default": "main.ts"
    },
    "appSelectorPrefix": {
      "type": "string",
      "default": ""
    },
    "skipModuleImport": {
      "type": "boolean",
      "default": false
    },

    "directivesPath": {
      "type": "string",
      "default": "directives"
    },
    "directivesModuleFile": {
      "type": "string",
      "default": ""
    },
    "directiveName": {
      "type": "string",
      "default": "my-directive"
    }
  }
}
