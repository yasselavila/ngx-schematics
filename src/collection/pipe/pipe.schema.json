{
  "$schema": "http://json-schema.org/schema",
  "id": "SchemanticsForPipe",
  "title": "Pipe Options Schema",
  "type": "object",
  "properties": {
    "isNxWorkspace": {
      "type": "boolean",
      "default": false
    },
    "multipleApps": {
      "type": "boolean",
      "default": false
    },
    "appId": {
      "type": "string",
      "default": ""
    },
    "appIsLib": {
      "type": "boolean",
      "default": false
    },
    "appPath": {
      "type": "string",
      "default": ""
    },
    "appMainFile": {
      "type": "string",
      "default": "main.ts"
    },
    "appSelectorPrefix": {
      "type": "string",
      "default": ""
    },
    "skipModuleImport": {
      "type": "boolean",
      "default": false
    },

    "pipesPath": {
      "type": "string",
      "default": "pipes"
    },
    "pipesModuleFile": {
      "type": "string",
      "default": "index.ts"
    },
    "pipeName": {
      "type": "string",
      "default": "my-pipe"
    }
  }
}
